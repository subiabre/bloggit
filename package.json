    "heroku-postbuild": "node-sass --include-path scss views/scss/style.scss views/css/style.css",
    "nodemon": "nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subiabre/bloggit.git"
  },
  "keywords": [
