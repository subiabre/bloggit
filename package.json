  "bugs": {
    "url": "https://github.com/subiabre/bloggit/issues"
  },
  "homepage": "https://github.com/subiabre/bloggit#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "node-sass": "^4.14.1",
    "parse-md": "^2.0.4",
    "pug": "^3.0.0",
    "showdown": "^1.9.1",
    "stratter": "^1.0.1"
  }
